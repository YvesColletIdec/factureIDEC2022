<Window x:Class="WpfFacture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFacture"
        mc:Ignorable="d"
        Title="Gestion des factures" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="575*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,118">
            <MenuItem Header="Gestion des articles" x:Name="menuGestionDesArticles" Click="menuGestionDesArticles_Click"/>
            <MenuItem Header="Gestion des catégories" x:Name="menuGestionDesCategories" Click="menuGestionDesCategories_Click"/>
            <MenuItem Header="Panier" x:Name="menuPanier" Click="menuPanier_Click"/>
            <MenuItem Header="Factures" x:Name="menuFacture" Click="menuFacture_Click"/>
        </Menu>
        <StackPanel Grid.Column="0" x:Name="monStackPanel" Grid.ColumnSpan="3" Margin="0,30,0,0" Grid.RowSpan="2"/>
    </Grid>
</Window>
