<Window x:Class="WpfFacture.Fenetre.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFacture.Fenetre"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Connexion" Height="214" Width="304">
    <Grid>
        <Label Content="Utilisateur" HorizontalAlignment="Left" Margin="22,21,0,0" VerticalAlignment="Top"/>
        <Label Content="Mot de passe" HorizontalAlignment="Left" Margin="22,63,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TXT_Erreur" Content="" HorizontalAlignment="Left" Margin="22,154,0,0" VerticalAlignment="Top" Width="259" Foreground="#FFF30909" FontWeight="Bold"/>
        <TextBox x:Name="TB_Login" HorizontalAlignment="Left" Margin="115,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <PasswordBox x:Name="TB_Password" HorizontalAlignment="Left" Margin="115,63,0,0" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="BTN_Quitter" Content="Quitter" HorizontalAlignment="Left" Margin="27,123,0,0" VerticalAlignment="Top" Click="BTN_Quitter_Click"/>
        <Button x:Name="BTN_Connecter" Content="Se Connecter" HorizontalAlignment="Left" Margin="197,122,0,0" VerticalAlignment="Top" Click="BTN_Connecter_Click"/>

    </Grid>
</Window>
