<UserControl x:Class="WpfFacture.Fenetre.UserControlPanier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfFacture.Fenetre"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <StackPanel>
        <TextBox Text="{Binding Fruit}" />
            <Button Content="Ajouter le fruit" Command="{Binding AjouterCommand}" />
            <ListView ItemsSource="{Binding ListeDeCourses}"/>
        </StackPanel>
    </Grid>
</UserControl>
